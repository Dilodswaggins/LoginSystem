<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background2"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp">

            <Button
                android:id="@+id/L_relogin"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/buttonstyle3" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"

            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Welcome to be one of us!"
                android:textColor="#FFFFFF"
                android:textSize="18sp"/>
        </LinearLayout>
        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_margin="12dp"
                android:text="           Name:" />

            <EditText
                android:id="@+id/L_name"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Input your name"/>
        </TableRow>
        <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_margin="12dp"
            android:text="           User:" />

        <EditText
            android:id="@+id/L_user"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Input your username"/>
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_margin="12dp"
            android:text="           Password:" />

        <EditText
            android:id="@+id/L_password"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="12dp"
            android:inputType="textPassword"
            android:hint="Input your password"/>
    </TableRow>

    <TableRow>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_margin="12dp"
            android:text="           EnsurePw:" />

        <EditText
            android:id="@+id/L_password1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="12dp"
            android:inputType="textPassword"
            android:hint="Ensure your password"/>
    </TableRow>

    <TableRow>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_margin="12dp"
            android:text="           Age:" />

        <EditText
            android:id="@+id/L_age"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Input your age" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_margin="12dp"
            android:text="           Telephone:" />

        <EditText
            android:id="@+id/L_phone"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Input your phone" />
    </TableRow>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">



            <Button
                android:id="@+id/L_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_span="3"
                android:layout_weight="1"
                android:background="@drawable/buttonstyle2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Register" />


        </LinearLayout>
    </TableLayout>
</TableLayout>
